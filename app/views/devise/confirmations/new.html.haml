.container
  .row
    .col-md-6.col-md-offset-3
      .panel.panel-default
        .panel-heading
          %span.glyphicon.glyphicon-lock
          Sign Up
        .panel-body
          = form_for(resource, as: resource_name,:html => {:role => "form",:method=>"post"}, url: confirmation_path(resource_name)) do |f|
            = devise_error_messages!
            .form-group
              %label{:for => "inputEmail"} Email
              = f.email_field :email,:class=>"form-control", autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)
            .form-group
              %button.btn.btn-primary{:type => "submit"} Resend confirmation instructions
        .panel-footer
          Already Member?
          = render "devise/shared/links"