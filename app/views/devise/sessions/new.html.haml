.container
  .row
    .col-md-6.col-md-offset-3
      .panel.panel-default
        .panel-heading
          %span.glyphicon.glyphicon-lock
          Login
        .panel-body
          = form_for(resource, as: resource_name,:html => {:class=>"form-horizontal",:role => "form"}, url: session_path(resource_name)) do |f|
            .form-group
              %label.control-label.col-xs-2{:for => "inputEmail"} Email
              .col-xs-10
                = f.email_field :email, autofocus: true,:class=>"form-control"
            .form-group
              %label.control-label.col-xs-2{:for => "inputPassword"} Password
              .col-xs-10
                = f.password_field :password, autocomplete: "off",:class=>"form-control"
            .form-group
              .col-xs-offset-2.col-xs-10
                .checkbox
                  %label
                    - if devise_mapping.rememberable?
                      = f.check_box :remember_me
                      Remember me
            .form-group
              .col-xs-offset-2.col-xs-10
                %button.btn.btn-primary{:type => "submit"} Login
        .panel-footer
          Not Registred?
          = render "devise/shared/links"